<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey500a2"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="com.example.alex.motoproject.screenLogin.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/app_logo"
            android:contentDescription="@string/description_logo" />

        <EditText
            android:id="@+id/sign_up_email"
            style="@style/MyColors"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="@string/hint_e_mail"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/sign_up_pass"
            style="@style/MyColors"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="@string/hint_pass"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/sign_up_repeat_pass"
            style="@style/MyColors"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="@string/hint_repeat_pass"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <Button
            android:id="@+id/sign_up_btn_ok"
            style="@style/MyButtonCustom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/submit" />
    </LinearLayout>
</ScrollView>

