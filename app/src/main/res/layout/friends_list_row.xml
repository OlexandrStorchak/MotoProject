<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="125dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/friends_list_ava"

        android:layout_gravity="center"
        android:src="@drawable/ava4"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/friends_list_ava"
        android:id="@+id/userName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User status"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"

        android:layout_below="@+id/userName"
        android:layout_toRightOf="@+id/friends_list_ava"
        android:layout_toEndOf="@+id/friends_list_ava"
        android:id="@+id/userStatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User info"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"

        android:layout_below="@+id/userStatus"
        android:layout_toRightOf="@+id/friends_list_ava"
        android:layout_toEndOf="@+id/friends_list_ava"
        android:id="@+id/userInfo" />


</RelativeLayout>