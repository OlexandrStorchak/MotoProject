<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueGray900"
    android:orientation="vertical"
    tools:context="com.example.alex.motoproject.fragments.AuthFragment">

    <TextView
        android:id="@+id/auth_title"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/greenA400"
        android:textSize="24sp"
        tools:text="@string/login_screen_title"
        />
    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/auth_progress_bar"
        android:visibility="gone"
        android:layout_marginTop="130dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        >

    <EditText
        android:id="@+id/auth_email"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        style="@style/MyColors"
        android:hint="@string/hint_e_mail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:visibility="invisible"/>
        <TextView
            android:id="@+id/auth_email_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            tools:text="Email is empty"
            android:textColor="@color/orangeA700"
            android:visibility="invisible"
            />



        <EditText
        android:id="@+id/auth_pass"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        style="@style/MyColors"
        android:hint="@string/hint_pass"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:visibility="invisible"
        />
        <TextView
            android:id="@+id/auth_pass_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            tools:text="Password is empty"
            android:textColor="@color/orangeA700"
            android:visibility="invisible"
            />

    <Button
        android:id="@+id/auth_btn_ok"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/login"
        style="@style/MyButtonCustom"
        />

    <Button
        android:id="@+id/auth_btn_sign_in"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/btn_sign_in"
        style="@style/MyButtonCustom"/>

    <Button
        android:id="@+id/auth_btn_google_sign_in"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/google"
        android:layout_marginBottom="20dp"
        style="@style/MyButtonCustom"/>
    </LinearLayout>

</LinearLayout>
