<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.motoproject.screenProfile.ScreenMyProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/profile_avatar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_height"
                android:layout_gravity="center"
                android:maxHeight="@dimen/nav_header_height"
                android:maxWidth="200dp" />
            <ImageView
                android:id="@+id/profile_show_on_map_indicator"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                />


            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                />

            <EditText
                android:id="@+id/profile_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/your_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/profile_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                />

            <EditText
                android:id="@+id/profile_nick_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/your_nick_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/profile_motorcycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                />

            <EditText
                android:id="@+id/profile_motorcycle_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/motorcycle_model"
                android:visibility="gone" />

            <TextView
                android:id="@+id/profile_about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                />

            <EditText
                android:id="@+id/profile_about_me_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/about_myself"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/profile_btn_edit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_edit_profile"
                android:text="@string/edit_changes" />

            <ImageView
                android:id="@+id/profile_btn_save"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_save_profile"
                android:visibility="gone"
                android:text="@string/save_changes" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/profile_gps_panel"
        android:layout_gravity="bottom"

        >


        <TextView
            android:id="@+id/profile_text_show_me_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_show_me_on_map"
            android:textColor="@color/colorDark"
            android:textSize="15sp"
            />

        <Spinner
            android:id="@+id/profile_set_gps_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/blueGrey50"

            android:entries="@array/profile_spinner_set_gps_visibility" />


    </LinearLayout>

</FrameLayout>
