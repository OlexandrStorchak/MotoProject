<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.motoproject.screenProfile.ScreenMyProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_user_avatar"
                style="@style/AvatarUserProfile"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_header_height"
                android:layout_gravity="center"
                android:contentDescription="@string/avatar"
                android:maxHeight="@dimen/nav_header_height"
                android:maxWidth="@dimen/nav_header_height" />

            <TextView
                android:id="@+id/profile_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                />

            <TextView
                android:id="@+id/profile_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                />

            <TextView
                android:id="@+id/profile_user_motorcycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                />

            <TextView
                android:id="@+id/profile_user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/profile_user_buttons"
        style="@style/MyButtonCustomProfile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="end">

        <ImageView
            android:id="@+id/profile_add_friend"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/add_friend"
            android:src="@mipmap/ic_profille_add"

            />

        <ImageView
            android:id="@+id/profile_send_message"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/send_message"
            android:src="@mipmap/ic_profille_send"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>
