<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_user_profile"
    tools:context="com.example.alex.motoproject.screenProfile.ScreenMyProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_user_avatar"
            style="@style/AvatarUserProfile"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_header_height"
            android:layout_gravity="center"
            android:maxHeight="@dimen/nav_header_height"
            android:maxWidth="@dimen/nav_header_height"
            android:contentDescription="@string/avatar" />

        <TextView
            android:id="@+id/profile_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/profile_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_user_buttons"
        style="@style/MyButtonCustom"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="start">

        <ImageView
            android:id="@+id/profile_add_friend"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:src="@mipmap/ic_friend_add"
            android:contentDescription="@string/add_friend" />

        <ImageView
            android:id="@+id/profile_send_message"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"

            android:src="@mipmap/ic_send_message"
            android:contentDescription="@string/send_message" />

    </LinearLayout>
</FrameLayout>
